		<include refid="selectPkgColumn"></include> <!-- pkg 컬럼들 가져오는 include -->
		c.*, pi.*  
		from package p
		join city c on p.city_id = c.city_id
		join package_image pi on p.pkage_id = pi.pkage_id
		where p.pkage_id = #{pkage_id}
	</select>
	
